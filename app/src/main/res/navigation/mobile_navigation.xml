    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_quests">

    <fragment
        android:id="@+id/navigation_quests"
        android:name="com.example.codequestapp.ui.quests.QuestsFragment"
        android:label="@string/title_quests"
        tools:layout="@layout/fragment_quests" />

    <fragment
        android:id="@+id/navigation_achievements"
        android:name="com.example.codequestapp.ui.achievements.AchievementsFragment"
        android:label="@string/title_achievements"
        tools:layout="@layout/fragment_achievements" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.codequestapp.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
